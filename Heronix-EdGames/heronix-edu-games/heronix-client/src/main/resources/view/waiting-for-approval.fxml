<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.heronix.edu.client.ui.controller.WaitingForApprovalController"
      spacing="25"
      alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="60" bottom="40" left="60"/>
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="15">
        <Label text="Device Registered Successfully!"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

        <Label text="Waiting for Teacher Approval"
               style="-fx-font-size: 18px; -fx-text-fill: #666;"/>
    </VBox>

    <!-- Content Card -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 30;"
          maxWidth="500">

        <!-- Progress Animation -->
        <ProgressIndicator fx:id="progressIndicator"
                          prefWidth="60"
                          prefHeight="60"/>

        <!-- Status Label -->
        <Label fx:id="statusLabel"
               text="Checking approval status..."
               wrapText="true"
               style="-fx-font-size: 15px; -fx-text-fill: #1976D2; -fx-text-alignment: center;"/>

        <!-- Device Info -->
        <VBox spacing="8" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Device:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <Label fx:id="deviceNameLabel" style="-fx-font-size: 13px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Device ID:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <Label fx:id="deviceIdLabel" style="-fx-font-size: 13px; -fx-text-fill: #666;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Student:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <Label fx:id="studentIdLabel" style="-fx-font-size: 13px;"/>
            </HBox>
        </VBox>

        <!-- Instructions -->
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Label text="What happens next?"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

            <VBox spacing="5" alignment="CENTER_LEFT" style="-fx-padding: 0 30 0 30;">
                <Label text="1. Your teacher will see your device registration"
                       wrapText="true"
                       style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                <Label text="2. They will approve your device from their portal"
                       wrapText="true"
                       style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                <Label text="3. Once approved, you'll automatically see your games"
                       wrapText="true"
                       style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            </VBox>
        </VBox>

        <!-- Refresh Button -->
        <Button fx:id="checkNowButton"
                text="Check Status Now"
                onAction="#handleCheckNow"
                style="-fx-font-size: 14px; -fx-background-color: #1976D2; -fx-text-fill: white; -fx-padding: 10px 30px; -fx-background-radius: 4px; -fx-cursor: hand;">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </Button>
    </VBox>

    <!-- Footer -->
    <Label text="This window will update automatically when your device is approved."
           wrapText="true"
           style="-fx-font-size: 12px; -fx-text-fill: #888; -fx-text-alignment: center;"/>
</VBox>
