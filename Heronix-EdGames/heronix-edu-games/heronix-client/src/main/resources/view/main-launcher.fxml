<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.edu.client.ui.controller.MainLauncherController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #1976D2; -fx-padding: 15;">
            <Label text="Heronix Educational Games"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Student Info -->
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="studentNameLabel"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="gradeLabel"
                       style="-fx-text-fill: #B3E5FC; -fx-font-size: 12px;"/>
            </VBox>

            <!-- Sync Status -->
            <HBox spacing="8" alignment="CENTER" style="-fx-padding: 0 0 0 20;">
                <Label fx:id="syncStatusIcon" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                <Label fx:id="syncStatusLabel" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
            </HBox>

            <!-- Settings Button -->
            <Button fx:id="settingsButton"
                    text="âš™"
                    onAction="#handleSettings"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20px; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 0;">

            <!-- Installed Games Tab -->
            <Tab text="My Games">
                <VBox spacing="20" style="-fx-padding: 30;">
                    <!-- Games Section -->
                    <VBox spacing="15">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Installed Games"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button fx:id="refreshButton"
                                    text="âŸ³ Refresh"
                                    onAction="#handleRefresh"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px; -fx-background-radius: 4px; -fx-cursor: hand;"/>
                        </HBox>

                        <!-- Games Grid -->
                        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
                            <FlowPane fx:id="gamesGrid"
                                      hgap="20"
                                      vgap="20"
                                      prefWrapLength="800"
                                      style="-fx-padding: 10;"/>
                        </ScrollPane>
                    </VBox>

                    <!-- Recent Scores Section -->
                    <VBox spacing="15">
                        <Label text="Recent Scores"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                        <TableView fx:id="scoresTable"
                                  prefHeight="200"
                                  style="-fx-background-color: white; -fx-background-radius: 8px;">
                            <columns>
                                <TableColumn fx:id="gameNameColumn" text="Game" prefWidth="200"/>
                                <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100"/>
                                <TableColumn fx:id="accuracyColumn" text="Accuracy" prefWidth="100"/>
                                <TableColumn fx:id="timeColumn" text="Time" prefWidth="100"/>
                                <TableColumn fx:id="dateColumn" text="Played At" prefWidth="150"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- Game Store Tab -->
            <Tab text="Game Store">
                <VBox spacing="20" style="-fx-padding: 30;">
                    <!-- Store Header -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Available Games"
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button fx:id="refreshStoreButton"
                                text="âŸ³ Refresh Store"
                                onAction="#handleRefreshStore"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px; -fx-background-radius: 4px; -fx-cursor: hand;"/>
                    </HBox>

                    <!-- Available Games Grid -->
                    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
                        <FlowPane fx:id="storeGamesGrid"
                                  hgap="20"
                                  vgap="20"
                                  prefWrapLength="800"
                                  style="-fx-padding: 10;"/>
                    </ScrollPane>
                </VBox>
            </Tab>

            <!-- Multiplayer Tab -->
            <Tab text="Multiplayer">
                <VBox spacing="30" alignment="CENTER" style="-fx-padding: 40; -fx-background-color: linear-gradient(to bottom, #e8eaf6, #c5cae9);">

                    <!-- Header -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Multiplayer Games"
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
                        <Label text="Join a game session started by your teacher"
                               style="-fx-font-size: 14px; -fx-text-fill: #5c6bc0;"/>
                    </VBox>

                    <!-- Code Breaker Game Card -->
                    <VBox alignment="CENTER" spacing="15" maxWidth="400"
                          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 5);">

                        <Label text="ðŸ”" style="-fx-font-size: 48px;"/>

                        <Label text="Code Breaker"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>

                        <Label text="Answer questions to earn credits. Hack other players by guessing their secret codes. Defend your credits with quick thinking!"
                               wrapText="true" textAlignment="CENTER"
                               style="-fx-font-size: 13px; -fx-text-fill: #666; -fx-padding: 0 20;"/>

                        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                            <VBox alignment="CENTER">
                                <Label text="2-30" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
                                <Label text="Players" style="-fx-font-size: 11px; -fx-text-fill: #999;"/>
                            </VBox>
                            <VBox alignment="CENTER">
                                <Label text="5-15" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
                                <Label text="Minutes" style="-fx-font-size: 11px; -fx-text-fill: #999;"/>
                            </VBox>
                            <VBox alignment="CENTER">
                                <Label text="All" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
                                <Label text="Grades" style="-fx-font-size: 11px; -fx-text-fill: #999;"/>
                            </VBox>
                        </HBox>

                        <Button fx:id="joinCodeBreakerBtn"
                                text="Join Game"
                                onAction="#handleJoinCodeBreaker"
                                prefWidth="200" prefHeight="45"
                                style="-fx-background-color: linear-gradient(to right, #1a237e, #311b92); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;"/>
                    </VBox>

                    <!-- More games coming soon -->
                    <Label text="More multiplayer games coming soon!"
                           style="-fx-font-size: 12px; -fx-text-fill: #9e9e9e; -fx-font-style: italic;"/>
                </VBox>
            </Tab>

        </TabPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #E0E0E0; -fx-padding: 10 20;">
            <Label fx:id="statusLabel"
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="pendingScoresLabel"
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

            <Button fx:id="syncNowButton"
                    text="Sync Now"
                    onAction="#handleSyncNow"
                    style="-fx-font-size: 12px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 5px 15px; -fx-background-radius: 3px; -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>
