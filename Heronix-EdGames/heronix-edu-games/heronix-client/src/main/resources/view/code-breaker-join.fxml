<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.edu.client.ui.controller.CodeBreakerJoinController"
            style="-fx-background-color: linear-gradient(to bottom, #1a237e, #311b92);">

    <!-- Header -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30 20 20 20;">
            <Label text="CODE BREAKER"
                   style="-fx-text-fill: #00ff88; -fx-font-size: 36px; -fx-font-weight: bold;"/>
            <Label text="Multiplayer Challenge"
                   style="-fx-text-fill: #b39ddb; -fx-font-size: 16px;"/>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">

            <!-- Session Code Entry -->
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 30; -fx-background-radius: 15;">
                <Label text="Enter Session Code"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TextField fx:id="sessionCodeField"
                           promptText="ABC123"
                           maxWidth="200"
                           alignment="CENTER"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 15; -fx-text-fill: #1a237e; -fx-alignment: center;"/>
                <Label text="Get the code from your teacher"
                       style="-fx-text-fill: #9e9e9e; -fx-font-size: 12px;"/>
            </VBox>

            <!-- Student Name -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Your Display Name"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <TextField fx:id="studentNameField"
                           promptText="Enter your name"
                           maxWidth="250"
                           style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 12;"/>
            </VBox>

            <!-- Avatar Selection -->
            <VBox alignment="CENTER" spacing="15">
                <Label text="Choose Your Avatar"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <FlowPane fx:id="avatarGrid"
                          hgap="15"
                          vgap="15"
                          alignment="CENTER"
                          maxWidth="500"/>
                <Label fx:id="avatarBonusLabel"
                       text="Select an avatar to see its bonus"
                       style="-fx-text-fill: #b39ddb; -fx-font-size: 12px; -fx-font-style: italic;"/>
            </VBox>

            <!-- Secret Code Selection -->
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(0,255,136,0.1); -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Choose Your Secret Code"
                       style="-fx-text-fill: #00ff88; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox fx:id="secretCodeBox" spacing="10" alignment="CENTER"/>
                <Label text="Other players will try to guess this - choose wisely!"
                       style="-fx-text-fill: #81c784; -fx-font-size: 11px;"/>
            </VBox>

            <!-- Join Button -->
            <Button fx:id="joinButton"
                    text="JOIN GAME"
                    onAction="#handleJoinGame"
                    disable="true"
                    prefWidth="200"
                    prefHeight="50"
                    style="-fx-background-color: #00ff88; -fx-text-fill: #1a237e; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;"/>

            <!-- Status -->
            <Label fx:id="statusLabel"
                   style="-fx-text-fill: #ff5252; -fx-font-size: 14px;"/>
        </VBox>
    </center>

    <!-- Back Button -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Button text="Back to Launcher"
                    onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-text-fill: #b39ddb; -fx-font-size: 14px; -fx-cursor: hand; -fx-underline: true;"/>
        </HBox>
    </bottom>

</BorderPane>
