<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.heronix.edu.client.ui.controller.SettingsController"
            style="-fx-background-color: #f5f5f5;"
            prefWidth="600" prefHeight="500">

    <!-- Header -->
    <top>
        <HBox style="-fx-background-color: #1976D2; -fx-padding: 15;">
            <Label text="Settings"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 30;">

                <!-- Device Information Section -->
                <VBox spacing="10">
                    <Label text="Device Information"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <GridPane hgap="10" vgap="8" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8px;">
                        <Label text="Device ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="deviceIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               style="-fx-text-fill: #666;"/>

                        <Label text="Device Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="deviceNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"
                               style="-fx-text-fill: #666;"/>

                        <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="studentIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"
                               style="-fx-text-fill: #666;"/>

                        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="deviceStatusLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- Application Settings Section -->
                <VBox spacing="10">
                    <Label text="Application Settings"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <GridPane hgap="10" vgap="8" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8px;">
                        <Label text="Server URL:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="serverUrlLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               style="-fx-text-fill: #666;"/>

                        <Label text="Sync Interval:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="syncIntervalLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"
                               style="-fx-text-fill: #666;"/>

                        <Label text="Network Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="networkStatusLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="App Version:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="appVersionLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"
                               style="-fx-text-fill: #666;"/>

                        <Label text="Database Path:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="dbPathLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"
                               style="-fx-text-fill: #666; -fx-font-size: 10px;"/>
                    </GridPane>
                </VBox>

                <!-- Actions Section -->
                <VBox spacing="10">
                    <Label text="Actions"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                    <HBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8px;">
                        <Button fx:id="testConnectionButton"
                                text="Test Connection"
                                onAction="#handleTestConnection"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 4px; -fx-cursor: hand;"/>

                        <Button fx:id="forceSyncButton"
                                text="Force Sync Now"
                                onAction="#handleForceSync"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-background-radius: 4px; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Bar -->
    <bottom>
        <VBox>
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #E0E0E0; -fx-padding: 10 20;">
                <Label fx:id="statusLabel"
                       style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="closeButton"
                        text="Close"
                        onAction="#handleClose"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 5px 20px; -fx-background-radius: 3px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
